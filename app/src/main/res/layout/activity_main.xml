<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#3C3F41"
        app:srcCompat="@mipmap/eimbas_foreground" />

    <Button
        android:id="@+id/ubatpammdibutton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:drawableEnd="@mipmap/ubatpammdi2_foreground"
        android:gravity="center"
        android:paddingLeft="110dp"
        android:paddingRight="10dp"
        android:text="Ubat Pam MDI" />

    <Button
        android:id="@+id/ubatpamturbuhalerbutton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:drawableEnd="@mipmap/ubatpamturbuhaler_foreground"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="110dp"
        android:paddingRight="10dp"
        android:text="UBAT PAM TURBUHALER" />


    <Button
        android:id="@+id/ubatpamaccuhalerbutton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:drawableEnd="@mipmap/ubatpamaccuhaler_foreground"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="110dp"
        android:paddingRight="10dp"
        android:text="UBAT PAM ACCUHALER" />

    <Button
        android:id="@+id/ubatpameasyhalerbutton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:drawableEnd="@mipmap/ubatpameasyhaler2_foreground"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="110dp"
        android:paddingRight="10dp"
        android:text="UBAT PAM EASYHALER" />

    <Button
        android:id="@+id/peninsulinnovopenbutton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:drawableEnd="@mipmap/peninsulinnovopen2_foreground"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="110dp"
        android:paddingRight="10dp"
        android:text="PEN INSULIN NOVOPEN" />

    <Button
        android:id="@+id/peninsulinallstarbutton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:drawableEnd="@mipmap/peninsulinallstar2_foreground"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="110dp"
        android:paddingRight="10dp"
        android:text="PEN INSULIN ALLSTAR" />

</LinearLayout>